
  {
  "manifest_version": 3,
  "name": "Hide Player Controls",
  "description": "Make it so the Streaming Controls aren't constantly popping up since it's something that has bothered me",
  "version": "1.0",
  "icons": {
    "16": "images/icon-16.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "16": "images/icon-16.png"
    }
  },
  "permissions": ["scripting", "activeTab", "commands"],
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+U",
        "mac": "Command+U"
      }
    }
  }
}